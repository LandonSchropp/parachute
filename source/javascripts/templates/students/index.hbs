{{view ClassList.EditableListView}}

<p>
  <button {{action updateGroups}}>Generate lists</button>
</p>

{{#each groups}}

  {{#view}}
    <h2>List {{view._parentView.contentIndex}}</h2>
  {{/view}}

  <table class="group-list">
    {{#each this}}
      <tr>
        {{#each this }}
         <td>{{name}}</td>
        {{/each }}
      </tr>
    {{/each}}
  </table>
{{/each}}