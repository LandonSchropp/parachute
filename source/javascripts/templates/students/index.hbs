<section>
  {{view ClassList.EditableListView}}

  <p>
    <button {{action updateGroups}}>
      {{#if groupsEmpty}}
        Generate
      {{else}}
        Update
      {{/if}}
    </button>
  </p>
</section>

<section>
  {{#if groupsEmpty}}

    <p class="instructions">
      Parachute is a tool by <a href="/">Landon Schropp</a> that generates lists of pairs. Each person is paired with every other person once.
    </p>

  {{else}}

    {{#each groups}}
      <section class="pairs">
        <h2>List {{index}}</h2>

        <table class="group-list">
          {{#each this}}
            <tr>
              {{#each this }}
               <td>{{name}}</td>
              {{/each }}
            </tr>
          {{/each}}
        </table>
      </section>

    {{/each}}

  {{/if}}
</section>